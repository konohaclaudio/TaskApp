<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TaskApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_default</item>
        <item name="colorPrimaryVariant">@color/color_default</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="21">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="EditTextTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:background">@drawable/bg_edit_text</item>
        <item name="android:padding">14dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColorHint">#2E7D32</item>
        <item name="android:textColor">@color/black</item>


    </style>

    <style name="ButtonTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:background">@drawable/bg_edit_text</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/color_default</item>
        <item name="background">@drawable/bg_btn</item>
        <item name="backgroundTint">@null</item>
        <item name="android:textSize">14sp</item>
    </style>


    <style name="RedButton" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:background">@drawable/bg_edit_text</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="background">@drawable/bg_btn</item>
        <item name="backgroundTint">@color/color_delete</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="BlueButton" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:background">@drawable/bg_edit_text</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="background">@drawable/bg_btn</item>
        <item name="backgroundTint">@color/color_details</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="GreenButton" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:background">@drawable/bg_edit_text</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="background">@drawable/bg_btn</item>
        <item name="backgroundTint">@color/color_default</item>
        <item name="android:textSize">14sp</item>
    </style>



    <style name="CustomTabLayout" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BottomSheetDialog" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
    </style>

    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>


</resources>